<?xml version="1.0"?>
<launch>

    <arg name="model"/>
    
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find mobile_robot_2wd_description)/urdf/robot_model.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mobile_robot_2wd_description)/config/robot.rviz" required="true" />

</launch>